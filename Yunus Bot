      <input type="text" id="userInput" placeholder="Type your complaint..." />
      <button onclick="handleSend()">Send</button>
    </div>
  </div>

  <script>
    const chatContainer = document.getElementById("chat-container");
    const userInput = document.getElementById("userInput");

    function handleSend() {
      const input = userInput.value.trim();
      if (!input) return;

      addMessage("user", input);

      const lowerInput = input.toLowerCase();
      const greetings = ["hi", "hello", "à¦¹à§à¦¯à¦¾à¦²à§‹", "à¦•à§‡à¦®à¦¨ à¦†à¦›à§‡à¦¨", "salaam", "assalamu", "à¦†à¦¸à¦¸à¦¾à¦²à¦¾à¦®à§", "à¦­à¦¾à¦‡"];
      const isGreeting = greetings.some(greet => lowerInput.includes(greet));

      if (isGreeting) {
        const greetReplies = [
          "à¦¹à§à¦¯à¦¾à¦²à§‹! à¦†à¦ªà¦¨à¦¿ à¦•à§‡à¦®à¦¨ à¦†à¦›à§‡à¦¨?",
          "Hello! How can I assist you today?",
          "à¦†à¦¸à¦¸à¦¾à¦²à¦¾à¦®à§ à¦†à¦²à¦¾à¦‡à¦•à§à¦®! à¦¬à¦²à§à¦¨ à¦­à¦¾à¦‡, à¦•à§€ à¦¬à¦¿à¦·à§Ÿ?",
          "à¦­à¦¾à¦‡, à¦†à¦ªà¦¨à¦¿ à¦­à¦¾à¦²à§‹ à¦†à¦›à§‡à¦¨ à¦¤à§‹?"
        ];
        const reply = greetReplies[Math.floor(Math.random() * greetReplies.length)];
        addMessage("yunus", reply);
      } else {
        const botReplies = [
          "à¦¸à¦¬à¦œà¦¿à¦° à¦¦à¦¾à¦® à¦¤à§‹ à¦•à¦®à¥¤",
          "à¦­à¦¾à¦‡, à¦à¦¸à¦¬ à¦¬à¦²à§‹ à¦¨à¦¾... à¦¸à¦¬à¦œà¦¿à¦° à¦¦à¦¾à¦® à¦¤à§‹ à¦•à¦®!",
          "à¦¦à§‡à¦¶ à¦à¦—à§‹à¦šà§à¦›à§‡, à¦¸à¦¬à¦œà¦¿à¦° à¦¦à¦¾à¦® à¦•à¦® à¦¤à§‹!",
          "à¦•à¦¿à¦¨à§à¦¤à§ à¦­à¦¾à¦‡, à¦¸à¦¬à¦œà¦¿à¦° à¦¦à¦¾à¦® à¦¤à§‹ à¦•à¦®!!",
          "à¦¬à¦¾à¦•à¦¿à¦Ÿà¦¾ à¦ªà¦°à§‡ à¦¦à§‡à¦–à¦¿... à¦•à¦¿à¦¨à§à¦¤à§ à¦¸à¦¬à¦œà¦¿à¦° à¦¦à¦¾à¦® à¦¤à§‹ à¦•à¦®à¥¤"
        ];
        const reply = botReplies[Math.floor(Math.random() * botReplies.length)];
        addMessage("yunus", reply);
      }

      userInput.value = "";
    }

    function addMessage(sender, text) {
      const msgDiv = document.createElement("div");
      msgDiv.className = `message ${sender === "user" ? "user" : "bot"}`;
      msgDiv.textContent = `${sender === "user" ? "ðŸ§ User:" : "ðŸ§” Yunus:"} ${text}`;
      chatContainer.appendChild(msgDiv);
      chatContainer.scrollTop = chatContainer.scrollHeight;
    }

    userInput.addEventListener("keydown", (e) => {
      if (e.key === "Enter") handleSend();
    });
